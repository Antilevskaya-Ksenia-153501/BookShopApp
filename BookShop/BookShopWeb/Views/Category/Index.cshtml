@model List<Category>

<div class="container">
   <div class="row pt-4">
       <div class="col-6">
           <h2 class="text-primary">
               Category List
           </h2>

       </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create new category</a>
       </div>

   </div>
    <table class="table table-bordered table-striped">
        <thead>
            <th>Name</th>
            <th>DisplayOrder</th>
            <th></th>
        </thead>
        <tbody>
            @foreach (var el in Model.OrderBy(obj=>obj.DisplayOrder))
            {
                <tr>
                    <td>@el.Name</td>
                    <td>@el.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@el.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@el.Id" class="btn btn-delete mx-2"><i class="bi bi-trash3-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
